<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsertActivity">

        <TextView
            android:id="@+id/textid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="Employee Form"
            android:background="#90D2FF"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textid"
            android:text="Name :"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="-1dp"/>

        <EditText
            android:id="@+id/nameEDT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textid"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/name"
            android:inputType="text"/>
        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="  Gender : "
            android:textSize="20sp"
            android:layout_marginTop="15dp"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/gender"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/nameEDT">

            <RadioButton
                android:id="@+id/inputMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Male"
                android:textSize="20sp"/>

            <RadioButton
                android:id="@+id/inputFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Female"
                android:textSize="20sp"
                android:layout_alignTop="@+id/radioGroup"/>
        </RadioGroup>


        <TextView
            android:id="@+id/email"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_below="@+id/gender"
            android:layout_alignEnd="@+id/name"
            android:paddingLeft="20dp"
            android:text=" Email :"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-17dp"/>

        <EditText
            android:id="@+id/emailEDT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_toRightOf="@+id/email"
            android:textSize="20sp"
            android:inputType="textEmailAddress"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"/>
        <TextView
            android:id="@+id/salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:text="Salary:"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"/>

        <EditText
            android:id="@+id/salaryEDT"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailEDT"
            android:textSize="20sp"
            android:inputType="number"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/name" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/salary"
            android:layout_marginTop="49dp"
            android:background="#6CCF6F"
            android:layout_marginLeft="60dp"
            android:text="ADD"
            android:onClick="btnaddemp"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_height="wrap_content"
            android:layout_width="130dp"
            android:layout_marginTop="43dp"
            android:text="CANCEL"
            android:background="#FF6699"
            android:layout_below="@+id/salaryEDT"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:onClick="btncancel"/>


    </RelativeLayout>
